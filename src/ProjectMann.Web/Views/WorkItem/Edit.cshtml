@model ProjectMann.Core.Domain.ItemTrabajo

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ItemTrabajo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdItemTrabajo" />
            <div class="form-group">
                <label for="FkTipoItemTrabajo" class="control-label">Tipo de item de trabajo</label>
                <select asp-for="FkTipoItemTrabajo" class="form-control" asp-items="ViewBag.FkTipoItemTrabajo"></select>
                <span asp-validation-for="FkTipoItemTrabajo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <textarea asp-for="Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="FkEstado" class="control-label">Estado</label>
                <select asp-for="FkEstado" class="form-control" asp-items="ViewBag.FkEstado"></select>
                <span asp-validation-for="FkEstado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="FkAsignadoA" class="control-label">Asignado A</label>
                <select asp-for="FkAsignadoA" class="form-control" asp-items="ViewBag.FkAsignadoA"></select>
                <span asp-validation-for="FkAsignadoA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

